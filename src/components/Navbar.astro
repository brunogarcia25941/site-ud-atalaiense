---
// src/components/Navbar.astro
---
<nav class="bg-black text-white border-b border-orange-500/30 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center w-full justify-between">
        <div class="flex-shrink-0">
          <a href="/"><img class="h-10 w-auto" src="/logo.png" alt="UD Atalaiense"></a>
        </div>
        
        <div class="hidden md:block">
          <div class="ml-10 flex items-center space-x-4">
            <a href="/" class="hover:text-orange-500 px-3 py-2 text-sm font-medium transition-colors">Início</a>
            
            <div class="relative group">
              <button class="hover:text-orange-500 px-3 py-2 text-sm font-medium flex items-center gap-1 transition-colors">
                Séniores
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
              </button>
              <div class="absolute left-0 hidden group-hover:block w-52 bg-zinc-900 border border-zinc-800 rounded-md shadow-xl py-2 z-50">
                <a href="/seniores" class="block px-4 py-2 text-sm hover:bg-orange-600 transition-colors">Época Atual (2025/26)</a>
                <a href="/seniores/arquivo" class="block px-4 py-2 text-sm hover:bg-orange-600 transition-colors border-t border-zinc-800">Épocas Anteriores</a>
              </div>
            </div>

            <a href="/formacao" class="hover:text-orange-500 px-3 py-2 text-sm font-medium transition-colors">Formação</a>
            <a href="/contactos" class="bg-orange-600 hover:bg-orange-500 px-4 py-2 rounded-md text-sm font-bold transition-all">Contactos</a>
          </div>
        </div>

        <button id="mobile-menu-button" class="md:hidden p-2 text-white">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" /></svg>
        </button>
      </div>
    </div>
  </div>

  <div id="mobile-menu" class="hidden md:hidden bg-zinc-950 border-t border-orange-500/20 px-4 py-4 space-y-2">
    <a href="/" class="block py-2">Início</a>
    <a href="/seniores" class="block py-2">Séniores (2025/2026)</a>
    <a href="/seniores/arquivo" class="block py-2">Séniores (Épocas Anteriores)</a>
    <a href="/formacao" class="block py-2">Formação</a>
  </div>
</nav>

<script>
  const btn = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => menu?.classList.toggle('hidden'));
</script>