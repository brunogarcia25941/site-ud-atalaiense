---
// src/components/Navbar.astro
---
<nav class="bg-black text-white border-b border-orange-500/30 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center w-full justify-between">
        <div class="flex-shrink-0">
          <a href="/">
            <img class="h-10 w-auto" src="/logo.png" alt="UD Atalaiense Logo">
          </a>
        </div>
        
        <div class="hidden md:block">
          <div class="ml-10 flex items-baseline space-x-4">
            <a href="/" class="hover:text-orange-500 px-3 py-2 rounded-md text-sm font-medium transition-colors">Início</a>
            <a href="/clube" class="hover:text-orange-500 px-3 py-2 rounded-md text-sm font-medium transition-colors">O Clube</a>
            <a href="/seniores" class="hover:text-orange-500 px-3 py-2 rounded-md text-sm font-medium transition-colors">Séniores</a>
            <a href="/formacao" class="hover:text-orange-500 px-3 py-2 rounded-md text-sm font-medium transition-colors">Formação</a>
            <a href="/contactos" class="bg-orange-600 hover:bg-orange-500 text-white px-4 py-2 rounded-md text-sm font-medium transition-all">Contactos</a>
          </div>
        </div>

        <div class="md:hidden flex items-center">
          <button id="mobile-menu-button" class="text-white hover:text-orange-500 focus:outline-none p-2">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div id="mobile-menu" class="hidden md:hidden bg-zinc-950 border-t border-orange-500/20 shadow-xl">
    <div class="px-4 pt-2 pb-6 space-y-2">
      <a href="/" class="block hover:text-orange-500 py-3 border-b border-zinc-900 font-medium">Início</a>
      <a href="/clube" class="block hover:text-orange-500 py-3 border-b border-zinc-900 font-medium">O Clube</a>
      <a href="/seniores" class="block hover:text-orange-500 py-3 border-b border-zinc-900 font-medium">Séniores</a>
      <a href="/formacao" class="block hover:text-orange-500 py-3 border-b border-zinc-900 font-medium">Formação</a>
      <a href="/contactos" class="block bg-orange-600 text-center py-3 rounded-lg font-bold mt-4">Contactos</a>
    </div>
  </div>
</nav>

<script>
  // Script simples para alternar o menu
  const btn = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>