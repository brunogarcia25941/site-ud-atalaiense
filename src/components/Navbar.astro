---
// src/components/Navbar.astro
---
<nav class="bg-black text-white border-b border-orange-500/30 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="w-10 md:hidden"></div>

      <div class="flex items-center gap-0 md:gap-0 flex-1 md:flex-none justify-center md:justify-start">
        <div class="flex-shrink-0">
          <a href="/">
            <img class="h-10 w-auto" src="/logo.png" alt="UD Atalaiense">
          </a>
        </div>
        <img class="h-10" src="/fotos/parceiros/certificado.png" alt="Certificado">
      </div>
      <div class="hidden md:block">
        <div class="ml-10 flex items-center space-x-4">
          <a href="/" class="hover:text-orange-500 px-3 py-2 text-sm font-medium transition-colors">Início</a>
          
          <div class="relative group">
            <button class="hover:text-orange-500 px-3 py-2 text-sm font-medium flex items-center gap-1 transition-colors">
              Futebol
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div class="absolute left-0 hidden group-hover:block w-52 bg-zinc-900 border border-zinc-800 rounded-md shadow-xl py-2 z-50">
              <a href="/seniores/arquivo" class="block px-4 py-2 text-sm hover:bg-orange-600 transition-colors">Seniores</a>
              <a href="/formacao" class="block px-4 py-2 text-sm hover:bg-orange-600 border-t border-zinc-800 transition-colors">Formação</a>
              <a href="/calendario" class="block px-4 py-2 text-sm hover:bg-orange-600 border-t border-zinc-800 transition-colors">Calendário de Jogos</a>
              
            </div>
          </div>

          <div class="relative group">
            <button class="hover:text-orange-500 px-3 py-2 text-sm font-medium transition-colors flex items-center gap-1">
              O Clube 
              <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
            </button>
            <div class="absolute left-0 hidden group-hover:block w-52 bg-zinc-900 border border-zinc-800 rounded-md shadow-xl py-2 z-50">
              <a href="/clube" class="block px-4 py-2 text-sm hover:bg-orange-600 transition-colors">História</a>
              <a href="/direcao" class="block px-4 py-2 text-sm hover:bg-orange-600 border-t border-zinc-800 transition-colors">Direção</a>
              <a href="/sede" class="block px-4 py-2 text-sm hover:bg-orange-600 border-t border-zinc-800 transition-colors">Sede</a>
            </div>
          </div>
          <a href="/galeria" class="hover:text-orange-500 px-3 py-2 text-sm font-medium transition-colors">Galeria</a>
          <a href="/loja" class="hover:text-orange-500 px-3 py-2 text-sm font-medium transition-colors">Loja</a>
          <a href="/parceiros" class="hover:text-orange-500 px-3 py-2 text-sm font-medium transition-colors">Parceiros</a>
          <a href="/contactos" class="bg-orange-600 hover:bg-orange-500 px-4 py-2 rounded-md text-sm font-bold transition-all">Contactos</a>
        </div>
      </div>

      <div class="md:hidden flex items-center">
        <button id="mobile-menu-button" class="text-white hover:text-orange-500 focus:outline-none p-2">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div id="mobile-menu" class="hidden md:hidden bg-zinc-950 border-t border-orange-500/20 shadow-xl">
    <div class="px-4 pt-2 pb-6 space-y-1">
      <a href="/" class="block hover:text-orange-500 py-3 border-b border-zinc-900 font-medium">Início</a>
      
      <div class="border-b border-zinc-900">
        <button id="mobile-futebol-button" class="w-full flex items-center justify-between hover:text-orange-500 py-3 font-medium">
          Futebol
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <div id="mobile-futebol-menu" class="hidden pl-4 pb-3 space-y-3">
          <a href="/seniores/arquivo" class="block text-zinc-400 hover:text-white text-sm">Seniores</a>
          <a href="/formacao" class="block text-zinc-400 hover:text-white text-sm">Formação</a>
          <a href="/calendario" class="block text-zinc-400 hover:text-white text-sm">Calendário de Jogos</a>
        </div>
      </div>

      <button id="mobile-clube-btn" class="w-full flex items-center justify-between hover:text-orange-500 py-3 font-medium">
        O Clube
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
      </button>
      <div id="mobile-clube-menu" class="hidden pl-4 pb-3 space-y-3 ">
        <a href="/clube" class="block text-zinc-400 hover:text-white text-sm">História</a>
        <a href="/direcao" class="block text-zinc-400 hover:text-white text-sm">Direção</a>
        <a href="/sede" class="block text-zinc-400 hover:text-white text-sm">Sede</a>
      </div>
      <a href="/galeria" class="block hover:text-orange-500 py-3 border-b border-zinc-900 font-medium">Galeria</a>
      <a href="/loja" class="block hover:text-orange-500 py-3 border-b border-zinc-900 font-medium">Loja</a>
      <a href="/parceiros" class="block hover:text-orange-500 py-3 border-b border-zinc-900 font-medium">Parceiros</a>
      <a href="/contactos" class="block bg-orange-600 text-center py-3 rounded-lg font-bold mt-6">Contactos</a>
    </div>
  </div>
</nav>

<script>
  // Selecionamos os elementos com os IDs exatos que estão no HTML
  const mobileMenuBtn = document.getElementById('mobile-menu-button'); // Corrigido
  const mobileMenu = document.getElementById('mobile-menu');
  
  const mobileFutebolBtn = document.getElementById('mobile-futebol-button'); // Corrigido
  const mobileFutebolMenu = document.getElementById('mobile-futebol-menu');
  
  const mobileClubeBtn = document.getElementById('mobile-clube-btn');
  const mobileClubeMenu = document.getElementById('mobile-clube-menu');

  // Abrir/Fechar Menu Principal
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Abrir/Fechar Submenu Futebol
  mobileFutebolBtn?.addEventListener('click', () => {
    mobileFutebolMenu?.classList.toggle('hidden');
    // Roda a seta
    mobileFutebolBtn.querySelector('svg')?.classList.toggle('rotate-180');
  });

  // Abrir/Fechar Submenu Clube
  mobileClubeBtn?.addEventListener('click', () => {
    mobileClubeMenu?.classList.toggle('hidden');
    // Roda a seta
    mobileClubeBtn.querySelector('svg')?.classList.toggle('rotate-180');
  });
</script>
<style>
  /* Adiciona uma transição suave para a rotação da seta */
  #mobile-futebol-button svg {
    transition: transform 0.2s;
  }
</style>
