---
// src/components/PlayerCard.astro
interface Props {
  nome: string;
  posicao: string;
  numero: number;
}

const { nome, posicao, numero } = Astro.props;
---

<div class="bg-zinc-900 border border-zinc-800 p-4 rounded-lg hover:border-orange-500 transition-all group">
  <div class="flex justify-between items-start">
    <div>
      <h3 class="text-xl font-bold text-white group-hover:text-orange-500">{nome}</h3>
      <p class="text-zinc-400 text-sm uppercase tracking-wider">{posicao}</p>
    </div>
    <span class="text-3xl font-black text-orange-500/20 group-hover:text-orange-500/40">
      #{numero}
    </span>
  </div>
</div>