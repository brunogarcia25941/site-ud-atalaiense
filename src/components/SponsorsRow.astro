---
import parceirosData from '../data/parceiros.json';
---

<section class="py-12 bg-zinc-950 border-t border-zinc-900/50">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center justify-between gap-8">
      <div class="shrink-0">
        <h2 class="text-3xl font-bold  uppercase tracking-[0.3em] italic">
          Os nossos <span class="text-orange-500"><br>Parceiros</span>
        </h2>
      </div>
      
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16">
        {parceirosData.map(p => (
          <a href={p.site} target="_blank" title={p.nome} class="group">
            <img 
              src={p.logo} 
              alt={p.nome} 
              class="h-8 m-5 md:h-10 w-auto object-contain opacity-100 group-hover:opacity-70 group-hover:grayscale-0 scale-130 transition-all duration-500" 
            />
          </a>
        ))}
        
      </div>
    </div>
  </div>
</section>