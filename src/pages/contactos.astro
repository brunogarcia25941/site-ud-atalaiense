---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contactos">
  <section class="max-w-7xl mx-auto px-4 py-12 md:py-20">
    <header class="mb-12">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">Contactos</h1>
      <p class="text-zinc-400 text-lg max-w-2xl">
        Tens alguma dúvida ou queres fazer parte da nossa família? Entra em contacto connosco.
      </p>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
      <div class="space-y-8">
        <div class="bg-zinc-900 border border-zinc-800 p-8 rounded-2xl">
          <h2 class="text-2xl font-bold text-orange-500 mb-6">Informações Gerais</h2>
          
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="bg-orange-600/10 p-3 rounded-lg text-orange-500">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
              </div>
              <div>
                <p class="font-bold text-white">Morada</p>
                <p class="text-zinc-400">Rua do Campo de Futebol, Atalaia<br/>Vila Nova da Barquinha, Portugal</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="bg-orange-600/10 p-3 rounded-lg text-orange-500">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
              </div>
              <div>
                <p class="font-bold text-white">E-mail</p>
                <p class="text-zinc-400">udatalaiense@hotmail.com</p>
              </div>
            </div>
          </div>
        </div>

        <div class="flex gap-4">
          <a href="https://www.facebook.com/uniaodesportiva.atalaiense?locale=pt_PT" target="_blank" class="bg-zinc-900 border border-zinc-800 p-4 rounded-xl hover:border-orange-500 transition-colors text-zinc-400 hover:text-orange-500">
             Facebook
          </a>
          <a href="https://www.instagram.com/uniaodesportivaatalaiense3275/" target="_blank" class="bg-zinc-900 border border-zinc-800 p-4 rounded-xl hover:border-orange-500 transition-colors text-zinc-400 hover:text-orange-500">
             Instagram
          </a>
        </div>
      </div>

      <form 
        action="https://formspree.io/f/xnjqnnkp" 
        method="POST"
        id="contact-form"
        class="bg-zinc-900 border border-zinc-800 p-8 md:p-10 rounded-2xl space-y-6 shadow-xl"
      >
        <div>
          <label class="block text-sm font-medium text-zinc-500 mb-2">O teu nome</label>
          <input 
            type="text" 
            name="nome" 
            id="contact-name"
            required
            class="w-full bg-black border border-zinc-800 rounded-xl px-4 py-4 text-white focus:outline-none focus:border-orange-500 transition-colors" 
            placeholder="Como te chamas?" 
          />
        </div>
        <div>
          <label class="block text-sm font-medium text-zinc-500 mb-2">O teu e-mail</label>
          <input 
            type="email" 
            name="email" 
            id="contact-email"
            required
            class="w-full bg-black border border-zinc-800 rounded-xl px-4 py-4 text-white focus:outline-none focus:border-orange-500 transition-colors" 
            placeholder="exemplo@mail.com" 
          />
        </div>
        <div>
          <label class="block text-sm font-medium text-zinc-500 mb-2">Assunto</label>
          <select 
            name="assunto" 
            id="contact-subject"
            class="w-full bg-black border border-zinc-800 rounded-xl px-4 py-4 text-white focus:outline-none focus:border-orange-500 transition-colors appearance-none"
          >
            <option value="Geral">Geral</option>
            <option value="Formação">Formação</option>
            <option value="Sócio">Sócio</option>
            <option value="Parceiro">Parceiro</option>
            <option value="Loja">Loja / Encomenda</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-zinc-500 mb-2">Mensagem</label>
          <textarea 
            name="mensagem" 
            id="contact-message"
            rows="5" 
            required
            class="w-full bg-black border border-zinc-800 rounded-xl px-4 py-4 text-white focus:outline-none focus:border-orange-500 transition-colors" 
            placeholder="Como podemos ajudar?"></textarea>
        </div>
        <button type="submit" class="w-full bg-orange-600 hover:bg-orange-500 text-white font-bold py-4 rounded-xl transition-all text-lg shadow-lg shadow-orange-900/20">
          Enviar Mensagem
        </button>
      </form>
    </div>

    <div class="mt-20 rounded-2xl overflow-hidden border border-zinc-800  hover:opacity-100 transition-all duration-500">
      <iframe 
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3481.393889349935!2d-8.455411604143649!3d39.47200304845287!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd1863d35ef526c1%3A0xbbb0a50663dadf7f!2sUni%C3%A3o%20Desportiva%20Atalaiense!5e1!3m2!1spt-PT!2spt!4v1766748783664!5m2!1spt-PT!2spt" 
        width="100%" 
        height="450" 
        style="border:0;" 
        allowfullscreen="" 
        loading="lazy">
      </iframe>
    </div>
  </section>
  <div id="contact-success" class="fixed inset-0 z-[100] hidden items-center justify-center p-4">
    <div class="absolute inset-0 bg-black/90 backdrop-blur-sm"></div>
    <div class="relative bg-zinc-900 border border-orange-500 p-8 rounded-2xl max-w-sm w-full text-center shadow-2xl">
       <h2 class="text-2xl font-bold text-white mb-2 italic">Mensagem Enviada!</h2>
       <p class="text-zinc-400 mb-6 text-sm">Recebemos o teu contacto. Responderemos o mais breve possível.</p>
       <button id="close-contact-success" class="w-full bg-orange-600 py-3 rounded-xl font-bold text-white">Excelente</button>
    </div>
  </div>
</Layout>

<script>
  // 1. Seleção de Elementos
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const successPopup = document.getElementById('contact-success');
  const closeSuccessBtn = document.getElementById('close-contact-success');

  const nameInput = document.getElementById('contact-name') as HTMLInputElement;
  const emailInput = document.getElementById('contact-email') as HTMLInputElement;
  const subjectInput = document.getElementById('contact-subject') as HTMLSelectElement;
  const messageInput = document.getElementById('contact-message') as HTMLTextAreaElement;

  // 2. Persistência: Carregar rascunho ao iniciar
  window.addEventListener('DOMContentLoaded', () => {
    if (nameInput) nameInput.value = localStorage.getItem('contact_draft_name') || '';
    if (emailInput) emailInput.value = localStorage.getItem('contact_draft_email') || '';
    if (subjectInput) subjectInput.value = localStorage.getItem('contact_draft_subject') || 'Geral';
    if (messageInput) messageInput.value = localStorage.getItem('contact_draft_message') || '';
  });

  // 3. Persistência: Guardar enquanto escreve
  const saveDraft = () => {
    localStorage.setItem('contact_draft_name', nameInput.value);
    localStorage.setItem('contact_draft_email', emailInput.value);
    localStorage.setItem('contact_draft_subject', subjectInput.value);
    localStorage.setItem('contact_draft_message', messageInput.value);
  };

  [nameInput, emailInput, subjectInput, messageInput].forEach(el => {
    el?.addEventListener('input', saveDraft);
  });

  // 4. ENVIO AJAX (Para não redirecionar para o Formspree)
  form?.addEventListener('submit', async (e) => {
    e.preventDefault(); // Impede o envio normal do browser
    
    const formData = new FormData(form);
    
    try {
      const response = await fetch(form.action, {
        method: 'POST',
        body: formData,
        headers: { 'Accept': 'application/json' }
      });

      if (response.ok) {
        // Limpar tudo se correr bem
        localStorage.removeItem('contact_draft_name');
        localStorage.removeItem('contact_draft_email');
        localStorage.removeItem('contact_draft_subject');
        localStorage.removeItem('contact_draft_message');
        form.reset();
        
        // Mostrar o modal de sucesso
        successPopup?.classList.replace('hidden', 'flex');
        document.body.style.overflow = 'hidden'; // Tranca o scroll
      } else {
        alert('Erro ao enviar. Por favor, tenta novamente.');
      }
    } catch (error) {
      alert('Erro de ligação. Verifica a tua internet.');
    }
  });

  // 5. Fechar Pop-up de Sucesso
  closeSuccessBtn?.addEventListener('click', () => {
    successPopup?.classList.replace('flex', 'hidden');
    document.body.style.overflow = 'auto';
  });
</script>