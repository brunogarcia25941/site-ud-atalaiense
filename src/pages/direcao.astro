---
import Layout from '../layouts/Layout.astro';
import direcaoData from '../data/direcao.json';
---

<Layout title="Direção" description="Conheça os órgãos sociais da União Desportiva Atalaiense.">
  <section class="relative py-16 bg-zinc-950">
    <div class="max-w-4xl mx-auto px-4 relative z-10">
      <h1 class="text-5xl font-impact uppercase italic text-white mb-12">
        Órgãos <span class="text-orange-500">Sociais</span>
      </h1>

      <div class="bg-zinc-900 border border-zinc-800 rounded-2xl overflow-hidden shadow-2xl">
        <table class="w-full text-left">
          <thead>
            <tr class="bg-zinc-800/50 text-orange-500 uppercase text-xs font-bold tracking-widest">
              <th class="px-6 py-4">Cargo</th>
              <th class="px-6 py-4">Nome</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-zinc-800">
            {direcaoData.map((membro) => (
              <tr class="hover:bg-zinc-800/30 transition-colors">
                <td class="px-6 py-5 text-zinc-400 font-medium">{membro.cargo}</td>
                <td class="px-6 py-5 text-white font-bold">{membro.nome}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>
</Layout>