---
import Layout from '../../../../layouts/Layout.astro';
import StaffCard from '../../../../components/StaffCard.astro';
import staffData from '../../../../data/equipa_tecnica.json';

export async function getStaticPaths() {
  const combinacoes = [...new Set(staffData
    .filter(s => s.escalao !== 'Seniores')
    .map(s => `${s.escalao}|${s.epoca}`))];

  return combinacoes.map(c => {
    const [escalao, epoca] = c.split('|');
    return {
      params: { escalao, epoca },
      props: { 
        staff: staffData.filter(s => s.escalao === escalao && s.epoca === epoca) 
      }
    };
  });
}

const { escalao, epoca } = Astro.params;
const { staff } = Astro.props;
---

<Layout title={`Equipa Técnica ${escalao} - ${epoca?.replace('-', '/')}`}>
  <section class="max-w-7xl mx-auto px-4 py-12">
    <header class="mb-12 border-l-4 border-orange-500 pl-6">
      <h1 class="text-4xl font-black uppercase">Equipa Técnica</h1>
      <p class="text-zinc-400">{escalao} | {epoca?.replace('-', '/')}</p>
    </header>

    {staff.length > 0 ? (
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {staff.map(membro => <StaffCard {...membro} />)}
      </div>
    ) : (
      <div class="bg-zinc-900 border border-zinc-800 p-12 rounded-2xl text-center">
        <p class="text-zinc-500 italic">Informação da equipa técnica ainda não disponível.</p>
      </div>
    )}

    <div class="mt-16">
      <a href={`/formacao/${escalao}/${epoca}`} class="text-orange-500 hover:underline">
        ← Voltar ao menu da equipa
      </a>
    </div>
  </section>
</Layout>