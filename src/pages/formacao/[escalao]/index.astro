---
import Layout from '../../../layouts/Layout.astro';
import jogadoresData from '../../../data/jogadores.json';

export async function getStaticPaths() {
  const escaloes = [...new Set(jogadoresData.filter(j => j.escalao !== 'Seniores').map(j => j.escalao))];
  return escaloes.map(escalao => ({ params: { escalao } }));
}

const { escalao } = Astro.params;
const epocas = [...new Set(jogadoresData
  .filter(j => j.escalao === escalao)
  .map(j => j.epoca)
)].sort().reverse();
---
<Layout title={`Arquivo ${escalao}`}>
  <section class="max-w-7xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-black mb-12">{escalao}</h1>
    <div class="mt-8 mb-8">
      <a href="/formacao" class="text-orange-500 hover:underline">← Voltar a Formação</a>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {epocas.map(epoca => (
        <a href={`/formacao/${escalao}/${epoca}`} class="group">
          <div class="bg-zinc-900 border border-zinc-800 p-8 rounded-2xl group-hover:border-orange-500 transition-all text-center">
            <h2 class="text-3xl font-bold uppercase italic group-hover:text-orange-500 transition-colors">Época {epoca.replace('-', '/')}</h2>
          
          </div>
        </a>
      ))}
    </div>
  </section>
</Layout>