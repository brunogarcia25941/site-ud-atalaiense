---
// src/pages/formacao/index.astro
import Layout from '../../layouts/Layout.astro';
import jogadoresData from '../../data/jogadores.json';

// Obtemos a lista de escalões de formação únicos
const escaloes = [...new Set(jogadoresData
    .filter(j => j.escalao !== 'seniores')
    .map(j => j.escalao))
];
---

<Layout title="Formação">
  <section class="max-w-7xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-black mb-12">Escalões de Formação</h1>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {escaloes.map(escalao => (
        <a href={`/formacao/${escalao}`} class="group">
          <div class="bg-zinc-900 border border-zinc-800 p-8 rounded-2xl group-hover:border-orange-500 transition-all text-center">
            <h2 class="text-3xl font-bold uppercase italic group-hover:text-orange-500 transition-colors">
                {escalao.replace('sub', 'Sub-')}
            </h2>
            <p class="text-zinc-500 mt-2">Ver Plantel Completo</p>
          </div>
        </a>
      ))}
    </div>
  </section>
</Layout>