---
import Layout from '../layouts/Layout.astro';
import NewsCard from '../components/NewsCard.astro';
import ResultCard from '../components/ResultCard.astro';
import noticiasData from '../data/noticias.json';
import resultadosData from '../data/resultados.json';
import SponsorsRow from '../components/SponsorsRow.astro';


interface Resultado {
  id: number;
  equipaCasa: string;
  equipaFora: string;
  golosCasa: number | null;
  golosFora: number | null;
  data: string;
  competicao: string;
  status: 'terminado' | 'agendado';
}

const resultados = resultadosData as Resultado[];
const ultimasNoticias = [...noticiasData]
  .sort((a, b) => new Date(b.data).getTime() - new Date(a.data).getTime())
  .slice(0, 3);
const proximosJogos = resultados
  .filter(r => r.status === 'agendado')
  .sort((a, b) => new Date(a.data).getTime() - new Date(b.data).getTime())
  .slice(0, 2); // Mostra os 2 próximos jogos
// Ordenar explicitamente por data: da mais recente para a mais antiga
const ultimosResultados = resultados
  .filter(r => r.status === 'terminado')
  .sort((a, b) => new Date(b.data).getTime() - new Date(a.data).getTime())
  .slice(0, 2); // Mostra os 2 resultados mais recentes
---

<Layout title="Início" description="Bem-vindo ao site oficial da UD Atalaiense. Fica a par de todos os jogos, resultados e notícias do nosso clube.">
  
  <section class="relative py-12 md:py-20 overflow-hidden">
    <div class="absolute -bottom-1 -right-20 opacity-20 pointer-events-none select-none z-0  ">
      <img 
        src="/logo.png" 
        alt="" 
        class="w-[400px] md:w-[650px] grayscale brightness-80"
      />
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 w-full">
      <h1 class="text-3xl md:text-6xl font-impact uppercase font-normal leading-tight text-white">
        União Desportiva <br/>
        <span class="text-5xl md:text-8xl">Atalaiense</span>
      </h1>
      <p class="mt-4 text-lg md:text-xl text-zinc-400 max-w-xl">
        Desde 1964, ao serviço do concelho! Mais que um Clube...um Rumo, um Crescimento, uma Evolução natural!
      </p>
    </div>
  </section>

  <section class="max-w-7xl mx-auto px-4  mb-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div class="lg:col-span-2">
        <h2 class="text-3xl font-impact uppercase mb-8 italic">Últimas <span class="text-orange-500">Notícias</span></h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {ultimasNoticias.map(noticia => (
            <NewsCard {...noticia} />
          ))}
        </div>
      </div>

      <div class="space-y-8">
        <div>
          <h2 class="text-3xl font-impact uppercase mb-8 italic underline decoration-orange-500 underline-offset-8">Próximos Jogos</h2>
          <div class="space-y-4">
          {proximosJogos.map(jogo => <ResultCard {...jogo} />)}
          </div>
        </div>
        <div>
          <h2 class="text-3xl font-impact uppercase mb-8 italic underline decoration-orange-500 underline-offset-8">Últimos Resultados</h2>
          <div class="space-y-4">
            {ultimosResultados.map(resultado => <ResultCard {...resultado} />)}
          </div>
        </div>
        <div class="mt-8">
          <a href="/calendario" class="block w-full text-center border border-zinc-800 hover:border-orange-500 py-3 rounded-xl text-sm font-bold transition-all text-zinc-400 hover:text-white">
            Ver Calendário Completo →
          </a>
        </div>
      </div>
    </div>
  </section>
  <SponsorsRow/>
  
</Layout>
<div id="news-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4">
  <div id="modal-overlay" class="absolute inset-0 bg-black/90 backdrop-blur-sm"></div>
  
  <div class="relative bg-zinc-900 border border-zinc-800 w-full max-w-2xl max-h-[90vh] rounded-2xl overflow-hidden flex flex-col shadow-2xl">
    <button id="modal-close" class="absolute top-4 right-4 z-30 bg-black/50 text-white p-2 rounded-full hover:bg-orange-600 transition-colors md:right-8">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
    </button>

    <div class="overflow-y-auto custom-scrollbar flex flex-col w-full h-full">
      
      <div class="relative group/slider bg-black w-full min-h-[200px] flex-none">
        <img id="modal-img" src="" alt="" class="w-full h-auto block relative z-10" />
  
        <button id="prev-img" class="absolute left-4 top-1/2 -translate-y-1/2 z-20 bg-black/50 text-white p-3 rounded-full hover:bg-orange-600 transition-all opacity-0 group-hover/slider:opacity-100 hidden">
          ❮
        </button>

        <button id="next-img" class="absolute right-4 top-1/2 -translate-y-1/2 z-20 bg-black/50 text-white p-3 rounded-full hover:bg-orange-600 transition-all opacity-0 group-hover/slider:opacity-100 hidden">
          ❯
        </button>
      </div>

      <div class="p-8 bg-zinc-900 relative z-20 border-t border-zinc-800">
        <span id="modal-date" class="text-orange-500 text-xs font-bold uppercase tracking-widest block mb-2"></span>
        <h2 id="modal-title" class="text-3xl font-bold text-white leading-tight"></h2>
        <div id="modal-text" class="py-5 text-zinc-300 leading-relaxed whitespace-pre-line text-lg"></div>
      </div>
      
    </div>
  </div>
</div>

<script>
  let currentImagens: string[] = [];
  let currentIdx = 0;

  const modal = document.getElementById('news-modal');
  const overlay = document.getElementById('modal-overlay');
  const closeBtn = document.getElementById('modal-close');
  const openBtns = document.querySelectorAll('.news-open-btn');
  const mImg = document.getElementById('modal-img') as HTMLImageElement;
  const mTitle = document.getElementById('modal-title');
  const mDate = document.getElementById('modal-date');
  const mText = document.getElementById('modal-text');
  
  const btnPrev = document.getElementById('prev-img');
  const btnNext = document.getElementById('next-img');

  const updateModalImage = () => {
    if (mImg && currentImagens.length > 0) {
      mImg.src = currentImagens[currentIdx];
      // Esconder botões se só houver 1 imagem
      const isMultiple = currentImagens.length > 1;
      btnPrev?.classList.toggle('hidden', !isMultiple);
      btnNext?.classList.toggle('hidden', !isMultiple);
    }
  };

  openBtns.forEach(btn => {
      btn.addEventListener('click', () => {
    const { titulo, data, resumo, imagens } = (btn as HTMLElement).dataset;
    
    currentImagens = JSON.parse(imagens || '[]');
    currentIdx = 0;

    // --- LÓGICA DAS SETAS ---
    const btnPrev = document.getElementById('prev-img');
    const btnNext = document.getElementById('next-img');

    if (currentImagens.length > 1) {
      // Se houver mais que uma imagem, removemos o 'hidden' para permitir que o hover as mostre
      btnPrev?.classList.remove('hidden');
      btnNext?.classList.remove('hidden');
    } else {
      // Se houver apenas uma, garantimos que ficam escondidas
      btnPrev?.classList.add('hidden');
      btnNext?.classList.add('hidden');
    }
    // -----------------------

    if (mTitle) mTitle.innerText = titulo || '';
    if (mDate) mDate.innerText = data || '';
    if (mText) mText.innerText = resumo || '';
    
    updateModalImage();

    modal?.classList.remove('hidden');
    modal?.classList.add('flex');
    document.body.style.overflow = 'hidden';
      });
  });

  btnPrev?.addEventListener('click', () => {
    currentIdx = (currentIdx - 1 + currentImagens.length) % currentImagens.length;
    updateModalImage();
  });

  btnNext?.addEventListener('click', () => {
    currentIdx = (currentIdx + 1) % currentImagens.length;
    updateModalImage();
  });

  const closeModal = () => {
    modal?.classList.add('hidden');
    modal?.classList.remove('flex');
    document.body.style.overflow = 'auto';
  };

  closeBtn?.addEventListener('click', closeModal);
  overlay?.addEventListener('click', closeModal);
</script>