---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
import produtosData from '../data/produtos.json';
---

<Layout title="Loja Oficial" description="Veste as cores da UD Atalaiense! Encontra equipamentos oficiais na nossa loja.">
  <section class="max-w-7xl mx-auto px-4 py-12 md:py-20">
    <header class="mb-16">
      <h1 class="text-5xl md:text-7xl font-impact italic text-orange-500 uppercase">
        Loja <span class="text-white text-4xl md:text-6xl block md:inline md:ml-4">Oficial</span>
      </h1>
      <p class="text-zinc-400 mt-4 text-lg">Escolhe os teus produtos e finaliza a encomenda.</p>
    </header>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {produtosData.map(produto => (
        <ProductCard {...produto} />
      ))}
    </div>
  </section>

  <button id="cart-trigger" class="fixed bottom-8 right-8 z-[90] bg-orange-600 text-white p-5 rounded-full shadow-2xl shadow-orange-900/40 hover:scale-110 hover:bg-white hover:text-orange-600 transition-all flex items-center justify-center">
    <div id="cart-count" class="absolute -top-1 -right-1 bg-white text-orange-600 text-[10px] font-black w-5 h-5 rounded-full flex items-center justify-center hidden">0</div>
    <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/></svg>
  </button>

  <div id="order-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4">
    <div id="modal-overlay" class="absolute inset-0 bg-black/90 backdrop-blur-sm"></div>
    
    <div class="relative bg-zinc-900 border border-zinc-800 w-full max-w-lg rounded-2xl overflow-hidden shadow-2xl flex flex-col max-h-[90vh]">
      <div class="p-6 border-b border-zinc-800 flex justify-between items-center bg-zinc-900">
        <h2 class="text-xl font-impact uppercase italic text-white">O Teu Carrinho</h2>
        <button id="clear-cart" class="text-zinc-500 hover:text-red-500 transition-colors flex items-center gap-1 text-[10px] font-bold uppercase">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
          Limpar Tudo
        </button>
      </div>

      <div id="cart-items-list" class="p-6 overflow-y-auto space-y-4 flex-grow bg-zinc-900/50 custom-scrollbar">
        </div>

      <form action="https://formspree.io/f/xnjqnnkp" method="POST" class="p-6 space-y-4 bg-zinc-900 border-t border-zinc-800">
        <input type="hidden" name="lista_produtos" id="hidden-cart-input" />
        <input type="email" name="email_cliente" id="user-email" required class="w-full bg-black border border-zinc-800 rounded-xl px-4 py-3 text-white focus:border-orange-500 outline-none text-sm" placeholder="O teu e-mail para contacto" />
        <textarea name="detalhes" id="user-message" rows="3" class="w-full bg-black border border-zinc-800 rounded-xl px-4 py-3 text-white focus:border-orange-500 outline-none text-sm" placeholder="Tamanhos (ex: Camisolas L, Calções M)..."></textarea>
        
        <div class="flex gap-3 mt-4">
          <button type="button" id="close-modal" class="flex-1 bg-zinc-800 py-4 rounded-xl font-bold text-white hover:bg-zinc-700 transition-all uppercase text-xs">Fechar</button>
          <button type="submit" id="submit-btn" class="flex-[2] bg-orange-600 py-4 rounded-xl font-bold text-white hover:bg-orange-500 transition-all uppercase text-xs tracking-widest disabled:opacity-50">Finalizar Pedido</button>
        </div>
      </form>
    </div>
  </div>

  <div id="success-modal" class="fixed inset-0 z-[110] hidden items-center justify-center p-4">
    <div class="absolute inset-0 bg-black/90 backdrop-blur-sm"></div>
    <div class="relative bg-zinc-900 border border-orange-500 p-8 rounded-2xl max-w-sm w-full text-center shadow-2xl">
      <div class="w-16 h-16 bg-orange-600/20 text-orange-500 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>
      </div>
      <h2 class="text-2xl font-bold text-white mb-2 italic uppercase font-impact tracking-widest">Pedido Enviado!</h2>
      <p class="text-zinc-400 mb-6 text-sm">O clube entrará em contacto contigo em breve.</p>
      <button id="close-success" class="w-full bg-orange-600 py-3 rounded-xl font-bold hover:bg-orange-500 transition-all text-white uppercase italic">Fechar</button>
    </div>
  </div>
</Layout>

<script>

  interface CartItem {
    id: string;
    nome: string;
    preco: string;
    img: string;
  }
  // Inicialização do Carrinho (Persistência)
  let cart = JSON.parse(localStorage.getItem('uda_cart') || '[]');

  const modal = document.getElementById('order-modal');
  const successModal = document.getElementById('success-modal');
  const cartTrigger = document.getElementById('cart-trigger');
  const cartCount = document.getElementById('cart-count');
  const cartItemsList = document.getElementById('cart-items-list');
  const hiddenInput = document.getElementById('hidden-cart-input') as HTMLInputElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const form = document.querySelector('form');

  function updateUI() {
    localStorage.setItem('uda_cart', JSON.stringify(cart));
    
    // 1. Contador no ícone
    if (cartCount) {
      cartCount.innerText = cart.length.toString();
      cartCount.classList.toggle('hidden', cart.length === 0);
    }

    // 2. Desativar botão se vazio
    if (submitBtn) submitBtn.disabled = cart.length === 0;

    // 3. Renderizar Lista no Modal
    if (cartItemsList) {
      if (cart.length === 0) {
        cartItemsList.innerHTML = `<p class="text-zinc-600 text-center py-10 italic">O carrinho está vazio.</p>`;
      } else {
        cartItemsList.innerHTML = cart.map((item: CartItem, index:number) => `
          <div class="flex items-center gap-4 bg-black/40 p-3 rounded-xl border border-zinc-800 group/item">
            <img src="${item.img}" class="w-12 h-12 rounded-lg object-cover" />
            <div class="flex-grow">
              <h4 class="text-white text-sm font-bold leading-tight">${item.nome}</h4>
              <p class="text-orange-500 font-bold text-xs">${item.preco}</p>
            </div>
            <button class="remove-item text-zinc-600 hover:text-red-500 p-2 transition-colors" data-index="${index}">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
            </button>
          </div>
        `).join('');
      }
    }

    // 4. Preparar dados para o E-mail
    if (hiddenInput) {
      hiddenInput.value = cart.map((i: CartItem) => `${i.nome} (${i.preco})`).join(' | ');
    }
  }

  // EVENTOS: Adicionar ao Carrinho
  document.querySelectorAll('.add-to-cart-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const data = (e.currentTarget as HTMLElement).dataset;
      cart.push({ id: data.id, nome: data.nome, preco: data.preco, img: data.img });
      updateUI();
      
      // Feedback visual no botão flutuante
      cartTrigger?.classList.add('scale-125');
      setTimeout(() => cartTrigger?.classList.remove('scale-125'), 200);
    });
  });

  // EVENTOS: Remover Item
  cartItemsList?.addEventListener('click', (e) => {
    const removeBtn = (e.target as HTMLElement).closest('.remove-item');
    if (removeBtn) {
      const index = parseInt((removeBtn as HTMLElement).dataset.index!);
      cart.splice(index, 1);
      updateUI();
    }
  });

  // EVENTOS: Limpar Tudo
  document.getElementById('clear-cart')?.addEventListener('click', () => {
    if (confirm('Limpar todos os produtos do carrinho?')) {
      cart = [];
      updateUI();
    }
  });

  // EVENTOS: Envio AJAX
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    submitBtn.disabled = true;
    submitBtn.innerText = "A enviar...";

    try {
      const response = await fetch(form.action, {
        method: 'POST',
        body: new FormData(form),
        headers: { 'Accept': 'application/json' }
      });

      if (response.ok) {
        cart = []; // Limpar após sucesso
        updateUI();
        form.reset();
        modal?.classList.add('hidden');
        successModal?.classList.replace('hidden', 'flex');
      } else {
        alert('Erro ao enviar pedido.');
      }
    } catch {
      alert('Erro de ligação.');
    } finally {
      submitBtn.disabled = false;
      submitBtn.innerText = "Finalizar Pedido";
    }
  });

  // Controlos de Visibilidade
  cartTrigger?.addEventListener('click', () => modal?.classList.replace('hidden', 'flex'));
  const closeAll = () => {
    modal?.classList.replace('flex', 'hidden');
    successModal?.classList.replace('flex', 'hidden');
  };
  document.getElementById('close-modal')?.addEventListener('click', closeAll);
  document.getElementById('modal-overlay')?.addEventListener('click', closeAll);
  document.getElementById('close-success')?.addEventListener('click', closeAll);

  // Inicializar
  updateUI();
</script>

<style>
  .custom-scrollbar::-webkit-scrollbar { width: 4px; }
  .custom-scrollbar::-webkit-scrollbar-thumb { background: #3f3f46; border-radius: 10px; }
</style>